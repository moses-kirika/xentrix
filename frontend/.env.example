# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Application
NEXT_PUBLIC_APP_NAME=Xentrix
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Credentials (CHANGE THESE IN PRODUCTION!)
# These should be stored securely and never hardcoded
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here

# Database (if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/xentrix_db

# Email Service (if using)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_smtp_password

# File Upload (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Authentication (if using NextAuth or similar)
# NEXTAUTH_SECRET=your_random_secret_here
# NEXTAUTH_URL=http://localhost:3000

# API Keys (if using external services)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# Security
# SESSION_SECRET=your_session_secret_here
# JWT_SECRET=your_jwt_secret_here

# Feature Flags
# ENABLE_ANALYTICS=false
# ENABLE_EMAIL_NOTIFICATIONS=false
